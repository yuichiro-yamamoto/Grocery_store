<div class="index_body">
 <div><%= render 'admin_users/admin_header' %></div> 
  <h1>購入履歴詳細管理</h1>

   <% @details.each do |d| %>
    <%= attachment_image_tag d, :item_image_history, :fill, 200, 200, format: 'jpeg' %>
     <h3>商品名 : <%= d.item_name_history %></h3>
     <h3>税抜き商品価格 : <%= d.item_price_history %>円</h3>
     <h3>購入数 : <%= d.purchase_number_history %>個</h3>
     <h3>配送先郵便番号 : <%= d.postal_code_history %></h3>
     <h3>配送先住所 : <%= d.address_history %></h3>
     <h3>購入者氏名 : <%= d.destination_name_history %></h3>
     <h3>電話番号 : <%= d.telephone_number_history %></h3>

     <%= form_for(d, url: admin_purchase_history_path, html: {method: 'PATCH'}) do |e| %>
      <h3><%= e.label :"配送状況" %>: <%= e.select :delivery_status, [["購入受付", "購入受付"], ["発送準備中", "発送準備中"], ["発送済み", "発送済み"]] %></h3>
      <div><%= e.submit "更新" %></div>
     <% end %>
   <% end %>

 </div>