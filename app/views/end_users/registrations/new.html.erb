<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name %><br />
  </div>

  <div class="field">
    <%= f.label :name_kana, "フリガナ" %><br />
    <%= f.text_field :name_kana %><br />
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %><br />
    <%= f.text_field :postal_code %><br />
  </div>

 <div clsaa="field">
  <%= f.label :address, "住所" %><br />
  <%= f.text_area :address %><br />
</div>

<div class="field">
  <%= f.label :telephone_number, "電話番号" %><br />
  <%= f.telephone_field :telephone_number %><br />
</div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "end_users/shared/links" %>
